[connection]
id=vlan-mgmt
type=vlan

[ethernet]
{{ if gt .Vlan.MTU 0 -}}
mtu={{ .Vlan.MTU }}
{{- end }}

[vlan]
flags=1
id={{ .Vlan.VlanID }}
parent={{ .BridgeName }}

[ipv4]
{{ if ne .DNSServers "" -}}
dns={{ .DNSServers }}
{{- end }}
{{ if eq .Vlan.Method "dhcp" -}}
method=auto
{{- end }}
{{ if eq .Vlan.Method "static" -}}
method=manual
address1={{ .Vlan.IP }}/{{ .Vlan.SubnetMask }},{{ .Vlan.Gateway }}
{{- end }}

[ipv6]
{{ if eq .Vlan.IPv6Method "dhcp" -}}
method=auto
{{- else if eq .Vlan.IPv6Method "static" -}}
method=manual
address1={{ .Vlan.IPv6IP }},{{ .Vlan.IPv6Gateway }}
{{- else -}}
method=disabled
{{- end }}