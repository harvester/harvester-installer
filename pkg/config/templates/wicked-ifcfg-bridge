STARTMODE='onboot'
BOOTPROTO='{{ .Bridge.Method }}'
BRIDGE='yes'
BRIDGE_STP='off'
BRIDGE_FORWARDDELAY='0'
BRIDGE_PORTS='{{ .Bond }}'
PRE_UP_SCRIPT="wicked:setup_bridge.sh"

{{ if eq .Method "static" -}}
IPADDR={{ .IP }}
NETMASK={{ .Bridge.SubnetMask }}
{{- end }}

{{ $defaultRoute := "no" -}}
{{- if .Bridge.DefaultRoute -}}
  {{- $defaultRoute = "yes" -}}
{{- end }}
DHCLIENT_SET_DEFAULT_ROUTE='{{ $defaultRoute }}'

{{ if gt .Bridge.MTU 0 -}}
MTU={{ .Bridge.MTU }}
{{- end }}
